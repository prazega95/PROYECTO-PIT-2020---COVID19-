<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrardatospersonales">

    <TextView
        android:id="@+id/txtDatosPersonales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:fontFamily="@font/regular"

        android:text="DATOS PERSONALES"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edtNombre"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_field"
                android:fontFamily="@font/light"
                android:hint="Nombres:"
                android:maxLength="50"/>

            <EditText
                android:id="@+id/edtApellidos"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_field"
                android:fontFamily="@font/light"
                android:hint="Apellidos"
                android:maxLength="50"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <Spinner
                    android:id="@+id/spinnerTipoDoc"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"

                    android:maxLines="1"
                    android:spinnerMode="dialog"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtDocumentos"
                    android:layout_width="179dp"
                    android:layout_height="55sp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field"
                    android:fontFamily="@font/light"
                    android:hint="Digitar Documento:"
                    android:inputType="number"
                    android:maxLength="10" />
            </LinearLayout>



            <EditText
                android:id="@+id/edtTelefono"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_field"
                android:fontFamily="@font/light"
                android:hint="Celular:"
                android:inputType="number"
                android:maxLength="9" />

            <TextView
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="______________________________________________" />

            <EditText
                android:id="@+id/edtUsuario"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_field"
                android:fontFamily="@font/light"
                android:hint="Usuario:"
                android:maxLength="50"/>

            <EditText
                android:id="@+id/edtClave"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_field"
                android:fontFamily="@font/light"
                android:hint="ContraseÃ±a:"
                android:inputType="textPassword"
                android:maxLength="20"/>

            <Button
                android:id="@+id/btnRegistrarDatosP"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button"
                android:fontFamily="@font/light"
                android:text="Registrarme"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>