<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#491111"
    tools:context=".triaje">


    <ImageView
        android:id="@+id/imageTriajee"
        android:layout_width="208dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginTop="-230dp"
        android:src="@drawable/triajelogo" />





    <TextView
        android:id="@+id/textView4"
        android:layout_width="206dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:fontFamily="@font/regular"
        android:text="Bienvenido(a), le invitamos a responder una serie de preguntas para llevar su caso o de algun familiar registrado en nuestra app"
        android:textColor="#FFFFFF" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/regular"
        android:text="Ingrese su DNI o RUC:"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/campoDocumento"
        android:layout_width="198dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:fontFamily="@font/light"
        android:hint="Digitar:"
        android:inputType="number"
        android:maxLength="11"
        android:textSize="24sp" />



    <TextView
        android:id="@+id/textid"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:layout_marginTop="-160dp"
        android:hint="id"
        android:textColorHint="#FFFFFF"
        android:fontFamily="@font/regular"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/textnombre"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:hint="nombre"
        android:layout_marginTop="-130dp"
        android:fontFamily="@font/regular"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF" />




    <Button
        android:id="@+id/btnIniciarRegistro"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:background="@drawable/button"
        android:fontFamily="@font/regular"
        android:textColor="@drawable/efecto_clic_button"
        android:text="INICIAR" />








</FrameLayout>